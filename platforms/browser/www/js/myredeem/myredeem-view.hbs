<div class="page-content">
    <div class="banner-cover banner-cover-sm" style="background-image: url('images/banner-1.jpg')">
        <img src="images/banner-1.jpg" alt="">
        <span class="banner-text">Simplicity is the ultimate sophistication.</span>
    </div>
    <div class="list-block media-list has-arrow-nav page-list page-list-custom">
        {{#if empty}}
        <ul class="page-list-custom-inner">
            {{#promotion}}
            <li class="swipeout">
                <a data-href="myredeemdetail.html?id={{id}}" class="item-link item-content show-redeem-detail"
                   index={{@index}}>
                    <div class="item-media">
                        {{#if status}}<span class="status">{{status}}</span>{{/if}}
                        <img src="{{../domain}}{{thumb}}" width="88">
                    </div>
                    <div class="item-inner">
                        <div class="item-title-row">
                            <div class="item-title">{{title}}</div>
                        </div>
                        <div class="item-text">{{info}}</div>
                    </div>
                </a>
            </li>
            {{/promotion}}
        </ul>
        {{ else }}
        <div class="content-block">
            <p class="empty-array">There is no redemption yet.</p>
        </div>

        {{/if}}
    </div>
</div>