{{#if cart}}
<div class="toolbar toolbar-bottom no-border">
    <div class="toolbar-inner one-column ">
        <a href="ecatalogue-sendmail.html" class="button button-big button-fill color-red">
            <i class="fa fa-envelope" aria-hidden="true"></i> Enquiry</a>
    </div>
</div>
{{/if}}
<div data-distance="50" class="page-content infinite-scroll">
    <div class="list-block  media-list has-arrow-nav page-list-custom">
        <ul id="product-list" class="page-list-custom-inner">
            {{#each cart}}
            <li class="swipeout cart-item">
                <div class="swipeout-content">
                    <a href="ecatalogue-detail.html?id={{id}}" class="item-link item-content show-product-detail">
                        <div class="item-media"><img src="{{../domain}}{{image}}" width="80"/></div>
                        <div class="item-inner">
                            <div class="item-title-row">
                                <div class="item-title">{{title}}</div>
                            </div>
                            <div class="item-text">{{{description}}}</div>
                        </div>
                    </a>
                </div>
                <div class="swipeout-actions-right">
                    <a href="#" data-confirm="Are you sure you want to delete this item?"
                       class="swipeout-delete remove-item">Delete</a>
                </div>
            </li>
            {{else}}
            <div class="empty">There is no item in Cart!</div>
            {{/each}}
        </ul>

    </div>
</div>